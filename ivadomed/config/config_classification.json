        },
        "ROICrop": {
            "size": [48, 48],
            "applied_to": ["im", "roi"]
        },
        "RandomAffine": {
            "translate": [0.03, 0.03],
            "applied_to": ["im"],
            "dataset_type": ["training"]
        },
        "ElasticTransform": {
			"alpha_range": [28.0, 30.0],
			"sigma_range":  [3.5, 4.5],
			"p": 0.1,
            "applied_to": ["im"],
            "dataset_type": ["training"]
        },
      "NumpyToTensor": {"applied_to": ["im"]},
      "NormalizeInstance": {"applied_to": ["im"]}
    }
